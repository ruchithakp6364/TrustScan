# TrustScan Environment Variables

# MongoDB Connection
MONGO_URL=mongodb://localhost:27017
DB_NAME=trustscan_db

# Prisma Database URL (MongoDB with Replica Set)
DATABASE_URL=mongodb://localhost:27017/trustscan_db?replicaSet=rs0

# Redis Connection
REDIS_URL=redis://localhost:6379

# Application
NEXT_PUBLIC_BASE_URL=http://localhost:3000
CORS_ORIGINS=*

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=change-this-to-a-secure-random-string-in-production

# External API Keys (Optional - platform works without these)
GOOGLE_SAFE_BROWSING_API_KEY=
VIRUSTOTAL_API_KEY=
WHOIS_API_KEY=
IP_GEOLOCATION_API_KEY=
PHISHTANK_API_KEY=
