generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String
  role      String   @default("user")
  createdAt DateTime @default(now())
  
  scans     Scan[]
  reports   Report[]

  @@map("users")
}

model Scan {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String?  @db.ObjectId
  url         String
  domain      String
  riskScore   Int
  trustRating String
  details     Json
  createdAt   DateTime @default(now())
  
  user        User?    @relation(fields: [userId], references: [id])

  @@map("scans")
  @@index([userId])
  @@index([createdAt])
}

model Report {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  url         String
  reason      String
  description String
  status      String   @default("pending")
  createdAt   DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id])

  @@map("reports")
  @@index([userId])
  @@index([status])
}
